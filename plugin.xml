<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
           id="org.wdc.toast"
      version="0.1.0">
    <name>ToastTest</name>
    <description>Sample PhoneGap Test Plugin</description>
    <license>MIT</license>
    <keywords>phonegap,test</keywords>


    <js-module src="www/Toast.js" name="Toast">
   <!-- <clobbers target="navigator.notification"/> -->
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Toast">
                <param name="android-package" value="org.wdc.toast.ToastTest"/>
            </feature>
        </config-file>

        <source-file src="src/android/ToastTest.java" target-dir="src/org/wdc/toasttest" />      
     </platform>          
</plugin>